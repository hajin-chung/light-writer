---
// novel info page
import Layout from "@layouts/Layout.astro";
import { getNovel } from "@lib/server";

const { novelId } = Astro.params;

// fetch novel info
if (typeof novelId !== "string") {
	return Astro.redirect("/404");
}


const novel = await getNovel(novelId);
---

<Layout title={novel.title}>
  {novelId}
	{JSON.stringify(novel)}
</Layout>
